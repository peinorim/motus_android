<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimary">@color/red_darken2</item>
        <item name="colorPrimaryDark">@color/red_darken4</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorAccent">@color/teal</item>
        <item name="android:textColorSecondary">@color/teal</item>
    </style>

    <!-- ActionBar styles -->

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/red_darken2</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorPrimaryDark">@color/red_darken4</item>
    </style>

    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DrawerToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/teal_darken2</item>
    </style>

</resources>
