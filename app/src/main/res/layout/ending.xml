<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MotusActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/endtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/endtitle"
            android:textColor="@color/black"
            android:textSize="@dimen/maintitle" />

        <LinearLayout
            android:id="@+id/cmot1"
            android:layout_below="@+id/endtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mot1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/ending_padding"
            android:paddingTop="@dimen/ending_padding"
            android:text="@string/blank"
            android:textSize="@dimen/mainsubtitle" />

        <ImageButton
            android:id="@+id/btnmot1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginStart="10sp"
            android:background="@color/white"
            android:onClick="goDef"
            android:padding="10dp"
            android:src="@drawable/ic_help_black_24dp"
            android:tint="@color/red_darken2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cmot2"
            android:layout_below="@+id/cmot1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/mot2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/ending_padding"
            android:paddingTop="@dimen/ending_padding"
            android:text="@string/blank"
            android:textSize="@dimen/mainsubtitle" />

        <ImageButton
            android:id="@+id/btnmot2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginStart="10sp"
            android:background="@color/white"
            android:onClick="goDef"
            android:padding="10dp"
            android:src="@drawable/ic_help_black_24dp"
            android:tint="@color/red_darken2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cmot3"
            android:layout_below="@+id/cmot2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mot3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/ending_padding"
            android:paddingTop="@dimen/ending_padding"
            android:text="@string/blank"
            android:textSize="@dimen/mainsubtitle" />

        <ImageButton
            android:id="@+id/btnmot3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginStart="10sp"
            android:background="@color/white"
            android:onClick="goDef"
            android:padding="10dp"
            android:src="@drawable/ic_help_black_24dp"
            android:tint="@color/red_darken2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cmot4"
            android:layout_below="@+id/cmot3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mot4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/ending_padding"
            android:paddingTop="@dimen/ending_padding"
            android:text="@string/blank"
            android:textSize="@dimen/mainsubtitle" />

        <ImageButton
            android:id="@+id/btnmot4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginStart="10sp"
            android:background="@color/white"
            android:onClick="goDef"
            android:padding="10dp"
            android:src="@drawable/ic_help_black_24dp"
            android:tint="@color/red_darken2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cmot5"
            android:layout_below="@+id/cmot4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mot5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/ending_padding"
            android:paddingTop="@dimen/ending_padding"
            android:text="@string/blank"
            android:textSize="@dimen/mainsubtitle" />

        <ImageButton
            android:id="@+id/btnmot5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginStart="10sp"
            android:background="@color/white"
            android:onClick="goDef"
            android:padding="10dp"
            android:src="@drawable/ic_help_black_24dp"
            android:tint="@color/red_darken2" />
        </LinearLayout>

        <Button
            android:id="@+id/fbshare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cmot5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:background="@drawable/button_fb"
            android:drawableEnd="@drawable/com_facebook_button_icon"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/com_facebook_button_icon"
            android:onClick="shareFB"
            android:paddingLeft="21dp"
            android:paddingRight="21dp"
            android:text="@string/fb_share"
            android:textColor="@color/white"
            android:textSize="@dimen/btnsend" />

    </RelativeLayout>
</RelativeLayout>